<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:easyloop="http://schemas.android.com/apk/res/com.example.countercircledemo">

    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="#00000000" />
                </shape></item>
            <item android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp"><shape>
                    <solid android:color="@color/secondary_white" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="5dp" android:right="1dp" android:top="4dp"><shape>
                    <solid android:color="@color/secondary_middle_gray" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="1px" android:left="3px" android:right="1px" android:top="3px"><shape>
                    <solid android:color="@android:color/holo_blue_bright" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_focused="true"><layer-list>
            <item><shape>
                    <solid android:color="#00000000" />
                </shape></item>
            <item android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp"><shape>
                    <solid android:color="@color/secondary_white" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="5dp" android:right="1dp" android:top="4dp"><shape>
                    <solid android:color="@color/secondary_middle_gray" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="1px" android:left="3px" android:right="1px" android:top="3px"><shape>
                    <solid android:color="@android:color/holo_blue_light" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
        
    <!-- Checked -->
    <item easyloop:tapeButtonStateChecked="true"><layer-list>
            <item><shape>
                    <solid android:color="#00000000" />
                </shape></item>
            <item android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp"><shape>
                    <solid android:color="@color/secondary_white" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="5dp" android:right="1dp" android:top="4dp"><shape>
                    <solid android:color="@color/button_checked" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="1px" android:left="3px" android:right="1px" android:top="3px"><shape>
                    <solid android:color="@color/button_checked" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
    
    <!-- Disabled -->
    <item android:state_enabled="false"><layer-list>
            <item><shape>
                    <solid android:color="#00000000" />
                </shape></item>
            <item android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp"><shape>
                    <solid android:color="@color/button_inactive" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="5dp" android:right="1dp" android:top="4dp"><shape>
                    <solid android:color="@color/button_inactive" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="1px" android:left="3px" android:right="1px" android:top="3px"><shape>
                    <solid android:color="@color/button_inactive" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>
    <!-- default -->
    <item><layer-list>
            <item><shape>
                    <solid android:color="#00000000" />
                </shape></item>
            <item android:bottom="11dp" android:left="4dp" android:right="6dp" android:top="4dp"><shape>
                    <solid android:color="@color/secondary_white" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="5dp" android:right="1dp" android:top="4dp"><shape>
                    <solid android:color="@color/secondary_middle_gray" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape></item>
            <item android:bottom="2px" android:left="2px" android:right="2px" android:top="2px"><shape>
                    <solid android:color="@color/button_active" />

                    <corners android:radius="2dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape></item>
        </layer-list></item>

</selector>